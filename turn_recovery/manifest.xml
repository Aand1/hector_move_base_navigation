<package>
  <description brief="turn_recovery">

     This package provides a recovery behavior for the navigation stack that attempts to clear space by turning the robot around.

  </description>
  <author>Florian Kunz</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/turn_recovery</url>
  
  <depend package="roscpp"/>
  <depend package="nav_core"/>
  <depend package="tf"/>
  <depend package="costmap_2d"/>
  <depend package="geometry_msgs"/>
  <depend package="base_local_planner"/>
  <depend package="pluginlib"/>
  <depend package="angles"/>

  <export>
    <cpp cflags="-I${prefix}/include" lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib -lturn_recovery" />
    <nav_core plugin="${prefix}/rotate_plugin.xml" />
  </export>

</package>


